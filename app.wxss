/*只显示一行*/
.line-limit-length{
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
/*只显示多行*/
.line-length {
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:3; /*显示的行数*/
}
